<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 当按下时 -->
    <item android:state_pressed="true"><shape>

            <!-- 设置渐变效果 -->
            <gradient android:angle="0" android:endColor="#9ddcd1" android:startColor="#9ddcd1" />

            <stroke android:width="4dip" android:color="#00000000" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <!-- 当获取焦点的时候 -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="0" android:endColor="#00000000" android:startColor="#FFFFFFFF" />

            <stroke android:width="4dip" android:color="#00000000" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="0" android:endColor="#41aaad" android:startColor="#41aaad" />

            <stroke android:width="4dip" android:color="#00000000" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>

</selector>